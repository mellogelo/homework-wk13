<h1>Eat A Burger!</h1>

<h2>Burger to Eat</h2>

<ul>
  {{#each burgers}}
      {{#if devoured}}
      {{>burger-block devoured=false}}
    {{/if}}
  {{/each}}
</ul>

<h2>Burgers Devoured</h2>

<ul>
  {{#each burgers}}
    {{#if devoured}}
      {{>burger-block devoured=true}}
    {{/if}}
  {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="ca" name="burger">
  </div>

  <button type="submit">Add A Burger</button>
</form>
